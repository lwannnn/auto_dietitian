/* pages/me/index.wxss */
.bk{
  position: absolute;
  height: 100%;
  width:100%;
  z-index: -1;
}

.userinfo {
  position: relative;
  width:100%;
  margin: 20px 40px;
  display: inline-block;
  flex-direction: column;
  align-items: center;
  /*background-color: #f66;*/
  /*position: absolute*/
}

.userinfo-avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
}

.username{
  display: inline-block;
  position: absolute;
  font-size: 20px;
  margin: 30px 0 0 60px;
  top: 0;
}

.datas{
  border-top: solid 1px #eeeeee;
}

.datas,.setting,.exit{
  position: relative;
  width: 320px;
  height: 40px;
  border-bottom: solid 1px #eeeeee;
  text-align: center;
}

.datas text,.setting text,.exit text{
  display: inline-block;
  line-height: 40px;
  margin-left: 40px;
}

.block{
  position: absolute;
  display: inline-block;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  top: 10px;
  left: 100px;
}
.b1{
  background-color: pink ;
}
.b2{
  background-color: #7D87C9;
}
.b3{
  background-color: #B39EE6;
}