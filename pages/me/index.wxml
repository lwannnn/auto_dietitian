<!--pages/me/index.wxml-->
<view>
  <image class="bk" src="img/Chart.png"></image>
  <view  class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="username">{{username}}</text>
  </view>
  
  <view>
    <view class="datas" bindtap="gotoPersonalPage">
      <view class="block b1"></view>
      <text>每日数据</text>
    </view>
    <view class="setting" bindtap="gotoPersonalPage">
      <view class="block b2"></view>
      <text>设置</text>
    </view>
    <view class="exit" bindtap="gotoLoginPage">
      <view class="block b3"></view>
      <text>退出</text>
    </view>
  </view>
</view>