/* pages/personaldata/index.wxss */
page{
  background-color: #f1f3f5;
  letter-spacing: 1px;
}

.toppart{
  color: black;
  padding: 20px 0;
  margin-bottom: 20px;
  background-color: #eeeef5;
}

.foodlist{
  background-color: white;
  margin-top: 20px;
  padding-top: 20px;
}

.headclass{
  display: inline-block;
  margin-left: 8px;
  letter-spacing: 0px;
  text-align: center;
}

.userinfo {
  width:100%;
  display: inline-block;
  flex-direction: column;
  align-items: center;
  /*background-color: #f66;*/
  /*position: absolute*/
}

.userinfo-avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
}

.basicdata{
  display: inline-block;
  margin-left: 25px;
}

.datatitle{
  margin-bottom: 15px;
  font-size: 20px;
  font-weight: 500;
}

.inputEdit {
  display: inline-block;
  border: 1px solid #eeeeee;
  color: #a09f9f;
  width: 100rpx;
  vertical-align: middle;
}

.projecttext{
  display: inline-block;
  color: #7a7a7a;
  line-height: 28px;
}

.datatext{
  display: inline-block;
  text-align: right;
  margin-left: 60px;
  line-height: 28px;
}

.basictext{
  color: #333333;
  letter-spacing: 0px;
}

.linechart{
  display: block;
  clear: both;
  padding-top: 30px;
  background-color: white;
}

.project{
  margin: 0 20px 15px 20px;
}

.canvas {
  width: 750rpx;
  height: 500rpx;
}

.foodtitle{
  font-size: 20px;
  font-weight: 600;
}

.editbtn{
  width: 67px;
  height: 24px;
  float: right;
}

.breakfast,.tips{
  margin: 0 20px;
}

.tips{
  color: gray;
  margin-bottom: 10px;
}