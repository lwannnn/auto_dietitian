/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.inputView {
  line-height: 50px; 
  float: left;
  width: 250px;
  border-radius:10px;
  margin-bottom: 5px;
  border:1px solid #999999;
 }
 .loginlab {
  margin: 15px 15px 15px 10px; 
  color: #545454; 
  font-size: 14px;
 }

 .inputNumber,.inputPassword{
  flex: block; 
  float: left; 
  text-align: left; 
  margin:5px 15px;
  color: #cccccc; 
  font-size: 12px
 }
.index{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 10px 0;
  box-sizing: border-box;
}
.left{
  
  width: 50%;
  height: 100%;
  padding-left: 20px;
  float: left;
}
.rili{
  background-color:#E0E6FC;
  height:250px;
  border-radius: 15px;
}
.riqi{
  background-color:#859AF2;
  height:50px;
  border-radius: 15px 15px 10px 10px;
  text-align: center;
}
.riqi p{
  font-size: large;
  font-weight: bold;
  line-height: 50px;
}
.person{
  text-align: left;
  padding: 6px 10px;
  font-size: 12px;
  font-weight: bold;

}
.line{
  font-weight: bold;
  color:white;
}
.tixing{
  margin: 20px 0;
  background:-webkit-linear-gradient(top, white, #B3C0F7,#859AF2);
  height: 100px;
  border-radius: 15px;
}
.task{
  font-size: 16px;
  font-weight: bold;
  margin: 10px;
}
.count{
  text-align: center;
  font-size: large;
  font-weight: bold;
  line-height: 30px;
}
.right{

  float: right;
  height: 100%;
  width: 30%;
  padding: 0px 20px;
}
.module1,.module2,.module3{
  background-image:radial-gradient(#859AF2, #B3C0F7, white);
  height: 100px;
  border-radius: 20px;
  margin-bottom: 35px;
  text-align: center;
}
.module1,.module2,.module3 p{
    color: white;
    font-size: large;
    font-weight: bold;
    line-height: 100px;
}



