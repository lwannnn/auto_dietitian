/* pages/science/question.wxss */
.back{
  background:-webkit-linear-gradient(top, white,#859AF2);
  height: 450px;
  width: 280px;
  padding: 50px 20px;
}
.que-box
{
  background: #EBDDFF;
  height: 350px;
  width:260px;
  border-radius: 15px;
  box-shadow: indigo 0px 0px 10px;
  padding: 20px 10px;
}
.que-word,.ans-word
{
  background: white;
  width: 100%;
  border-radius: 15px;
}
.que-word{
  height: 50px;
  line-height: 50px;
  color: indigo;
  text-align: center;
  font-size: large;
  font-weight: bold;
}
.ans-word
{
  text-align: left;
  margin-top: 20px;
  height: 280px;
  
}
.ans-word-text{
  margin:0px 20px;
  line-height: 30px;
  color: black;
  font-size: 15px;
}
.line
{
  margin: 5px 0px;
  color:gray;
  width: 100%;
  height: 1px;
  border-top: solid #ACC0D8 1px;
}
