/* pages/local/index.wxss */
page{
  background-color:#EEF2F5
}
.title
{
  display:flex;
  width:100%;
  height:20%;
  padding-left:10%;
  top:0;
  position: fixed;
}
.title_container
{
  width:33.3%
}

.control-btn {
  width: 7vh;
  height: 7vh;

  background-color: #dfefff;
  border: 3px solid white;

  border-radius: 9vh;
  /*for Android*/
  -webkit-box-shadow: 0 0 10px #caeafe;
  /*for IOS*/
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1;
  box-shadow: 0 0 10px #caeafe;
}

.me-btn {
  bottom: 16vh;
  right: 10px;
  position: absolute;
}

.me-btn-content{
  width: 5vh;
  height: 5vh;
}

.refresh-btn {
  bottom: 6vh;
  right: 10px;
  position: fixed;
}
.menu_container
{
  width:80%;
  margin-left:10%;
  margin-top:5%;
  height:400px;
  background-color:white;
}
.detail-btn
{
  background-color: white;
  color:#FB7500;
  border: 1px solid #FB7500; 
  float:right;
  width:40%;
}