/* pages/local/index.wxss */

.title
{
  display:flex;
  width:100%;
  height:20%;
  padding-left:10%;
}
.title_container
{
  width:33.3%
}

.control-btn {
  width: 7vh;
  height: 7vh;

  background-color: #dfefff;
  border: 3px solid white;

  border-radius: 9vh;
  /*for Android*/
  -webkit-box-shadow: 0 0 10px #caeafe;
  /*for IOS*/
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1;
  box-shadow: 0 0 10px #caeafe;
}

.me-btn {
  bottom: 16vh;
  right: 10px;
  position: absolute;
}

.me-btn-content,
.detail-btn-content,
.notice-btn-content {
  width: 5vh;
  height: 5vh;
}

.refresh-btn {
  bottom: 6vh;
  right: 10px;
  position: absolute;
}
